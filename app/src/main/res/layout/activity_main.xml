<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/rect">

    <com.example.aleksey.testapp002.CurveView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_point"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/add_point_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="onAddPoint"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_point"
        android:id="@+id/remove_point_button"
        android:layout_alignTop="@+id/add_point_button"
        android:layout_toRightOf="@+id/add_point_button"
        android:onClick="onRemovePoint"
        />




</RelativeLayout>

